<div class="row">
    <div class="col-md-12">
        <h2 class="mb-4">Gestión de Libros (ABMC)</h2>
        <a href="/books/new" class="btn btn-success mb-3">
            <i class="fas fa-plus"></i> Registrar Nuevo Libro
        </a>
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Título</th>
                        <th>Autor</th>
                        <th>Editorial</th>
                        <th>Páginas</th>
                        <th>Edición</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each libros}}
                    <tr>
                        <td>{{id_libro}}</td>
                        <td>{{titulo}}</td>
                        <td>{{autor}}</td>
                        <td>{{editorial}}</td>
                        <td>{{cant_paginas}}</td>
                        <td>{{fecha_edicion_fmt}}</td>
                        <td>
                            <span class="badge {{#eq estado 'en biblioteca'}}bg-success{{/eq}}{{#eq estado 'prestado'}}bg-warning text-dark{{/eq}}{{#eq estado 'en reparación'}}bg-danger{{/eq}}">
                                {{estado}}
                            </span>
                        </td>
                        <td>
                            <a href="/books/edit/{{id_libro}}" class="btn btn-sm btn-primary me-2" title="Editar">
                                <i class="fas fa-edit"></i> Editar
                            </a>
                            <form action="/books/delete/{{id_libro}}" method="POST" class="d-inline"
                                onsubmit="return confirm('¿Está seguro de que desea eliminar el libro {{titulo}}? Solo se puede eliminar si está en biblioteca.');">
                                <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i> Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{else}}
                    <tr>
                        <td colspan="8" class="text-center">No hay libros registrados en el catálogo.</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>