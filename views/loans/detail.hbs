<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
            <h2>Detalle Préstamo N° {{prestamo.id_prestamo}} </h2>
            <a href="/loans" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver al Listado
            </a>
        </div>

        {{> messages}}

        <div class="card shadow-lg mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Información General del Préstamo</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Socio:</strong> <a href="/members/{{prestamo.Socio.id_socio}}">{{prestamo.Socio.nomyape}}</a></p>
                        <p class="mb-1"><strong>ID Socio:</strong> {{prestamo.Socio.id_socio}}</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Fecha de Préstamo:</strong> <span class="badge bg-info text-dark">{{prestamo.fecha_prestamo_fmt}}</span></p>
                        <p class="mb-1"><strong>Fecha de Devolución:</strong> 
                            {{#if prestamo.fecha_devolucion_fmt}}
                                <span class="badge bg-success">{{prestamo.fecha_devolucion_fmt}}</span>
                            {{else}}
                                <span class="badge bg-danger">Pendiente</span>
                            {{/if}}
                        </p>
                        <p class="mb-1"><strong>Estado:</strong> 
                            {{#if prestamo.isVigente}}
                                <span class="badge bg-warning text-dark">Vigente</span>
                            {{else}}
                                <span class="badge bg-success">Devuelto</span>
                            {{/if}}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Detalles de Libros Prestados -->
        <div class="card shadow-lg">
            <div class="card-header bg-secondary text-white">
                <h4 class="mb-0">Libros Asociados (Detalle del Préstamo)</h4>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>ID Libro</th>
                                <th>Título</th>
                                <th>Autor</th>
                                <th>ISBN</th>
                                <th class="text-center">Estado del Libro</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each prestamo.detalles}}
                            <tr>
                                <td><a href="/books/{{Libro.id_libro}}">{{Libro.id_libro}}</a></td>
                                <td>{{Libro.titulo}}</td>
                                <td>{{Libro.autor}}</td>
                                <td>{{Libro.isbn}}</td>
                                <td class="text-center">
                                    <span class="badge bg-{{#if (eq Libro.estado 'prestado')}}warning{{else}}success{{/if}} text-dark">
                                        {{Libro.estado}}
                                    </span>
                                </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- Acciones si está vigente -->
        {{#if prestamo.isVigente}}
        <div class="text-center mt-4">
            <form action="/loans/return/{{prestamo.id_prestamo}}?_method=PUT" method="POST" onsubmit="return confirm('¿Confirma la devolución de este préstamo? Esto actualizará todos los libros a "en biblioteca".');">
                <button type="submit" class="btn btn-lg btn-success shadow-sm">
                    <i class="fas fa-undo"></i> Marcar Todo como Devuelto
                </button>
            </form>
        </div>
        {{/if}}
    </div>
</div>